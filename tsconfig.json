{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": false,
		"noFallthroughCasesInSwitch": false,
		"paths": {
			"@app/*": ["src/app/*"],
			"@login/*": ["src/login/*"],
			"@session/*": ["src/session/*"],
			"@type/*": ["src/types/*"],
			"@database/*": ["src/database/*"],
			"@user/*": ["src/user/*"],
			"@log/*": ["src/log/*"],
			"@security/*": ["src/security/*"],
			"@org/*": ["src/organization/*"],
			"@projects/*": ["src/project/*"],
			"@board/*": ["src/board/*"],
			"@task/*": ["src/tasks/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
